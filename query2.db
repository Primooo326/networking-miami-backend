-- Tabla usuario
CREATE TABLE usuario (
  id INT PRIMARY KEY AUTO_INCREMENT,
  nombre VARCHAR(255),
  email VARCHAR(255),
  password VARCHAR(255),
  fechaNacimiento VARCHAR(255),
  verificado BOOLEAN DEFAULT FALSE,
  condado VARCHAR(255),
  ciudad VARCHAR(255),
  genero VARCHAR(255),
  telefono VARCHAR(255),
  biografia TEXT,
  avatar VARCHAR(255),
  fotoPortada VARCHAR(255),
  objetivo TEXT,
  fechaIngreso VARCHAR(255)
);

-- Tabla usuariotemasinteres
CREATE TABLE usuariotemasinteres (
  usuario_id INT,
  interes VARCHAR(255),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla usuarioareaexperiencia
CREATE TABLE usuarioareaexperiencia (
  usuario_id INT,
  experiencia VARCHAR(255),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla usuariotipoconexion
CREATE TABLE usuariotipoconexion (
  usuario_id INT,
  conexion VARCHAR(255),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla usuariolenguajes
CREATE TABLE usuariolenguajes (
  usuario_id INT,
  lenguaje VARCHAR(255),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla usuarioocupaciones
CREATE TABLE usuarioocupaciones (
  usuario_id INT,
  ocupacion VARCHAR(255),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla usuarioredessociales
CREATE TABLE usuarioredessociales (
  usuario_id INT,
  red VARCHAR(255),
  link VARCHAR(255),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla usuariopublicaciones
CREATE TABLE usuariopublicaciones (
  id INT PRIMARY KEY AUTO_INCREMENT,
  usuario_id INT,
  urlFotos TEXT,
  tipo VARCHAR(255),
  descripcion TEXT,
  comentarios TEXT,
  reacciones TEXT,
  compartidos TEXT,
  precio DECIMAL(10, 2),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla publicacioncompartidos	
CREATE TABLE publicacioncompartidos	 (
  id INT PRIMARY KEY AUTO_INCREMENT,
  publicacion_id INT,
  usuario_id INT,
  FOREIGN KEY (publicacion_id) REFERENCES usuariopublicaciones(id),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla publicacionreacciones
CREATE TABLE publicacionreacciones (
  id INT PRIMARY KEY AUTO_INCREMENT,
  publicacion_id INT,
  usuario_id INT,
  reaccion VARCHAR(255),
  FOREIGN KEY (publicacion_id) REFERENCES usuariopublicaciones(id),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla publicacioncomentarios
CREATE TABLE publicacioncomentarios (
  id INT PRIMARY KEY AUTO_INCREMENT,
  publicacion_id INT,
  usuario_id INT,
  comentario TEXT,
  fecha VARCHAR(255),
  FOREIGN KEY (publicacion_id) REFERENCES usuariopublicaciones(id),
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
);

-- Tabla contacto
CREATE TABLE contacto (
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
  usuario_id INT,
  FOREIGN KEY (contacto_id) REFERENCES usuario(id)
  contacto_id INT,
);

-- Tabla chat
CREATE TABLE contacto (
  usuario_id INT,
  contacto_id INT,
  FOREIGN KEY (usuario_id) REFERENCES usuario(id),
  FOREIGN KEY (contacto_id) REFERENCES usuario(id)
);


-- Tabla mensajes
CREATE TABLE mensajes (
  id INT PRIMARY KEY AUTO_INCREMENT,
  chat_id INT,
  fecha VARCHAR(255),
  mensaje TEXT,
  FOREIGN KEY (chat_id) REFERENCES chat(id)
);
