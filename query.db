CREATE TABLE usuarios (
    id INT PRIMARY KEY AUTO_INCREMENT,
    email VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL,
    name VARCHAR(255) NOT NULL,
    birthdate DATE NOT NULL,
    phone VARCHAR(20) NOT NULL,
    gender VARCHAR(20) NOT NULL,
    city VARCHAR(255) NOT NULL,
    biography TEXT NOT NULL,
    objetivo TEXT NOT NULL,
    avatar VARCHAR(255),
    isMailVerified BOOLEAN NOT NULL DEFAULT FALSE,

);

CREATE TABLE usuarios_languages (
    usuario_id INT,
    language VARCHAR(255),
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);

CREATE TABLE usuarios_area_experiencia (
    usuario_id INT,
    area_experiencia VARCHAR(255),
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);

CREATE TABLE usuarios_temas_interes (
    usuario_id INT,
    tema_interes VARCHAR(255),
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);

CREATE TABLE usuarios_tipo_conexion (
    usuario_id INT,
    tipo_conexion VARCHAR(255),
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);
